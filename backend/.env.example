# Copy this file to .env and update values

# Project
PROJECT_NAME="BARQ Fleet Management"
VERSION="1.0.0"
API_V1_STR="/api/v1"

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/auth/google/callback

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=barq_fleet
POSTGRES_PORT=5432

# ==================== Platform Integrations ====================

# BARQ Main Backend API
BARQ_MAIN_API_URL=https://api.barq.sa
BARQ_MAIN_API_KEY=your-barq-api-key
BARQ_MAIN_CLIENT_ID=your-barq-client-id
BARQ_MAIN_CLIENT_SECRET=your-barq-client-secret
BARQ_MAIN_API_TIMEOUT=30

# Jahez API Integration
JAHEZ_API_URL=https://api.jahez.sa/partner
JAHEZ_API_KEY=your-jahez-api-key
JAHEZ_PARTNER_ID=your-jahez-partner-id
JAHEZ_PARTNER_SECRET=your-jahez-partner-secret
JAHEZ_API_TIMEOUT=30

# Saned API Integration (separate from Jahez if different endpoints)
SANED_API_URL=https://api.saned.sa/partner
SANED_API_KEY=your-saned-api-key
SANED_PARTNER_ID=your-saned-partner-id
SANED_PARTNER_SECRET=your-saned-partner-secret
SANED_API_TIMEOUT=30

# ==================== Routing & Maps ====================

# Google Maps API (for Distance Matrix and Directions APIs)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Auto-Dispatch Configuration (optional overrides)
DISPATCH_MAX_RADIUS_KM=7
DISPATCH_MAX_PICKUP_ETA_MINUTES=15
DISPATCH_SLA_HOURS=4
DISPATCH_TARGET_ORDERS_PER_DAY=15
