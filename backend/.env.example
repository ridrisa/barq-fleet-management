# BARQ Fleet Management - Environment Configuration Template
# Copy this file to .env and update values with your credentials

# Project
PROJECT_NAME="BARQ Fleet Management"
VERSION="1.0.0"
API_V1_STR="/api/v1"
ENVIRONMENT=development

# Security
SECRET_KEY=dev-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Google OAuth (get from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3002/auth/google/callback

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=barq_fleet
POSTGRES_PORT=5432

# Auto-Dispatch Configuration
DISPATCH_MAX_RADIUS_KM=7
DISPATCH_MAX_PICKUP_ETA_MINUTES=15
DISPATCH_SLA_HOURS=4
DISPATCH_TARGET_ORDERS_PER_DAY=15

# Upstash Redis (Serverless Redis - for rate limiting and caching)
UPSTASH_REDIS_REST_URL=https://your-upstash-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# Google BigQuery (for performance analytics from SANED)
BIGQUERY_PROJECT_ID=looker-barqdata-2030
BIGQUERY_DATASET=master_saned
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json
