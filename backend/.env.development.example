# BARQ Fleet Management - Development Environment Configuration
# Copy this file to .env.development and update with your local values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://barq_dev:barq_dev@localhost:5432/barq_fleet_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_QUERY_TIMEOUT=30000
DB_ECHO=true

# Read Replicas (disabled in development)
DB_READ_REPLICAS_ENABLED=false
DB_READ_REPLICA_URLS=

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5

# Cache Configuration
CACHE_DEFAULT_TTL=60
CACHE_USER_TTL=120
CACHE_ORG_TTL=300
CACHE_STATIC_TTL=600
CACHE_WARMING_ENABLED=false
MEMORY_CACHE_SIZE=100
MEMORY_CACHE_TTL=30

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=2
CELERY_PREFETCH_MULTIPLIER=2
CELERY_SOFT_TIME_LIMIT=300
CELERY_TIME_LIMIT=600
CELERY_MAX_RETRIES=3
CELERY_RETRY_DELAY=60
CELERY_RESULT_EXPIRES=3600

# API Configuration
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
MAX_CONCURRENT_REQUESTS=100
API_CACHE_TTL=30

# Security
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (allow all in development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_CREDENTIALS=true

# File Handling
FILE_CHUNK_SIZE=8192
MAX_FILE_SIZE=10485760
STREAM_BUFFER_SIZE=65536

# CDN (disabled in development)
CDN_ENABLED=false
CDN_URL=
CDN_ACCESS_KEY=
CDN_SECRET_KEY=

# Monitoring & Profiling (enabled in development)
PROFILING_ENABLED=true
LOG_QUERIES=true
LOG_SLOW_QUERIES_ONLY=false
SLOW_QUERY_THRESHOLD=0.1
MEMORY_PROFILING_ENABLED=false

# Email Configuration (use console backend in development)
EMAIL_FROM=dev@localhost
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# External Services (disabled in development)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console

# Performance Thresholds (relaxed for development)
API_RESPONSE_P95_MS=500
DB_QUERY_AVG_MS=100
CACHE_HIT_RATIO_MIN=0.50
CPU_USAGE_MAX=0.90
MEMORY_USAGE_MAX=0.90
MAX_ERROR_RATE=0.10

# Health Check
HEALTH_CHECK_INTERVAL=60

# Object Pool
OBJECT_POOL_SIZE=50
LARGE_OBJECT_THRESHOLD=1048576

# Garbage Collection Tuning
GC_THRESHOLD_0=700
GC_THRESHOLD_1=10
GC_THRESHOLD_2=10
